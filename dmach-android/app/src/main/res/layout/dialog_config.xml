<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <TextView
        android:id="@+id/tempo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/tempo" />
    <TextView
        android:id="@+id/tempo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tempo_text" />
    <SeekBar
        android:id="@+id/tempo_seekbar_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_below="@+id/tempo_text"
        android:max="23" />
    <SeekBar
        android:id="@+id/tempo_seekbar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/tempo_seekbar_10"
        android:max="9" />
    <TextView
        android:id="@+id/swing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tempo_seekbar_1"
        android:text="@string/swing" />
    <TextView
        android:id="@+id/swing_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempo_seekbar_1"
        android:layout_toRightOf="@+id/swing_text" />
    <SeekBar
        android:id="@+id/swing_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_below="@+id/swing_text"
        android:max="50" />
</RelativeLayout>
