<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Channel">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
		<item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">@string/channel_listener</item>
        <item name="android:textColor">@color/colonial</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DMachTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:windowBackground">@color/colonial</item>
    </style>
    
    <style name="Play">
        <item name="android:background">@drawable/sel_control</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:onClick">@string/play_listener</item>
        <item name="android:src">@drawable/play</item>
    </style>
    
    <style name="Setting">
        <item name="android:background">@drawable/sel_setting</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:paddingRight">23dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/colonial</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
        
    <style name="Setting.Bottom">
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="Setting.Middle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="Setting.Top">
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <style name="Step">
        <item name="android:background">@drawable/sel_step</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:onClick">@string/step_listener</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>
    
	<style name="Steps">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
	<style name="Tempo">
        <item name="android:background">@drawable/sel_control</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:onClick">@string/tempo_listener</item>
        <item name="android:text">@string/init_tempo</item>
        <item name="android:textColor">@color/colonial</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
	<style name="Title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/dune</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
        
</resources>