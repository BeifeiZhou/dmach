<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DMachTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:windowBackground">@color/colonial</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Config">
        <item name="android:layout_margin">6dp</item>
    </style>
    
    <style name="Control">
        <item name="android:background">@drawable/sel_control</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <style name="Control.Play">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:onClick">@string/play_listener</item>
        <item name="android:src">@drawable/control_play</item>
    </style>
    
    <style name="Control.Config">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_toRightOf">@+id/playButton</item>
        <item name="android:onClick">@string/config_listener</item>
        <item name="android:src">@drawable/control_config</item>
    </style>

    <style name="Control.Reset">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_toRightOf">@+id/configButton</item>
        <item name="android:onClick">@string/reset_listener</item>
        <item name="android:src">@drawable/control_reset</item>
    </style>

    <style name="Channel">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:onClick">@string/channel_listener</item>
    </style>
    
    <style name="Channel.BD">
        <item name="android:src">@drawable/channel_bd</item>
    </style>
    
    <style name="Channel.SD">
        <item name="android:src">@drawable/channel_sd</item>
    </style>
    
    <style name="Channel.CP">
        <item name="android:src">@drawable/channel_cp</item>
    </style>
    
    <style name="Channel.TT">
        <item name="android:src">@drawable/channel_tt</item>
    </style>
    
    <style name="Channel.CB">
        <item name="android:src">@drawable/channel_cb</item>
    </style>
    
    <style name="Channel.HH">
        <item name="android:src">@drawable/channel_hh</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    
    <style name="Setting">
        <item name="android:background">@drawable/sel_setting</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
        
    <style name="Setting.1">
        <item name="android:src">@drawable/setting_1</item>
    </style>
    
    <style name="Setting.2">
        <item name="android:src">@drawable/setting_2</item>
    </style>
    
    <style name="Setting.3">
        <item name="android:src">@drawable/setting_3</item>
    </style>
    
    <style name="Setting.4">
        <item name="android:src">@drawable/setting_4</item>
    </style>
    
    <style name="Setting.5">
        <item name="android:src">@drawable/setting_5</item>
    </style>
    
    <style name="Setting.6">
        <item name="android:src">@drawable/setting_6</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>