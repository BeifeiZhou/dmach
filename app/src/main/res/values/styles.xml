<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AppCompat.NoActionBar.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DMachTheme" parent="Theme.AppCompat.NoActionBar.FullScreen">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:windowBackground">@color/colonial</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PatchTheme" parent="DMachTheme">
        <item name="android:textColor">@color/dune</item>
        <item name="colorControlActivated">@color/dune</item>
    </style>

    <style name="Control">
        <item name="android:background">@drawable/sel_control</item>
    </style>

    <style name="Control.Play">
        <item name="android:src">@drawable/ic_control_play_small</item>
    </style>

    <style name="Control.Config">
        <item name="android:src">@drawable/ic_control_config_small</item>
    </style>

    <style name="Control.Reset">
        <item name="android:src">@drawable/ic_control_reset_small</item>
    </style>

    <style name="Control.Patch">
        <item name="android:src">@drawable/ic_control_patch_small</item>
    </style>

    <style name="Logo">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
        <item name="android:textColor">@color/dune</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:textColor">@color/colonial</item>
    </style>

    <style name="Channel">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:textColor">@color/colonial</item>
        <item name="android:textSize">@dimen/text_size_channel</item>
    </style>

    <style name="Channel.BD">
        <item name="android:text">@string/channel_bd</item>
    </style>

    <style name="Channel.SD">
        <item name="android:text">@string/channel_sd</item>
    </style>

    <style name="Channel.CP">
        <item name="android:text">@string/channel_cp</item>
    </style>

    <style name="Channel.TT">
        <item name="android:text">@string/channel_tt</item>
    </style>

    <style name="Channel.CB">
        <item name="android:text">@string/channel_cb</item>
    </style>

    <style name="Channel.HH">
        <item name="android:text">@string/channel_hh</item>
    </style>

    <style name="Setting" parent="Channel">
        <item name="android:background">@drawable/sel_setting</item>
    </style>

    <style name="Setting.1">
        <item name="android:text">@string/setting_1</item>
    </style>

    <style name="Setting.2">
        <item name="android:text">@string/setting_2</item>
    </style>

    <style name="Setting.3">
        <item name="android:text">@string/setting_3</item>
    </style>

    <style name="Setting.4">
        <item name="android:text">@string/setting_4</item>
    </style>

    <style name="Setting.5">
        <item name="android:text">@string/setting_5</item>
    </style>

    <style name="Setting.6">
        <item name="android:text">@string/setting_6</item>
    </style>

</resources>
